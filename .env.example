# ResearchOps Agent Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# NVIDIA NGC Configuration (Required for EKS deployment)
# =============================================================================
# Get your NGC API key from https://ngc.nvidia.com/setup
NGC_API_KEY=your_ngc_api_key_here

# =============================================================================
# NIM Service URLs (Optional - defaults to Docker Compose services)
# =============================================================================
# Override only if using external NIMs
# REASONING_NIM_URL=http://reasoning-nim:8000
# EMBEDDING_NIM_URL=http://embedding-nim:8001

# =============================================================================
# Paper Source API Keys (Optional)
# =============================================================================
# Semantic Scholar (optional, increases rate limits)
SEMANTIC_SCHOLAR_API_KEY=

# IEEE Xplore (required if ENABLE_IEEE=true)
IEEE_API_KEY=

# ACM Digital Library (required if ENABLE_ACM=true)
ACM_API_KEY=

# SpringerLink (required if ENABLE_SPRINGER=true)
SPRINGER_API_KEY=

# =============================================================================
# Paper Source Enable Flags
# =============================================================================
# Free sources (always available)
ENABLE_ARXIV=true
ENABLE_PUBMED=true
ENABLE_SEMANTIC_SCHOLAR=true
ENABLE_CROSSREF=true

# Paid sources (requires API keys above)
ENABLE_IEEE=false
ENABLE_ACM=false
ENABLE_SPRINGER=false

# =============================================================================
# Optional Services
# =============================================================================
# Redis for caching (optional)
REDIS_URL=redis://redis:6379

# Qdrant for vector storage (optional)
QDRANT_URL=http://vector-db:6333

# =============================================================================
# Agent Configuration
# =============================================================================
# Relevance threshold for filtering papers (0.0-1.0)
RELEVANCE_THRESHOLD=0.7

# Maximum papers to retrieve per search
MAX_PAPERS_PER_SEARCH=20

# Maximum concurrent paper analyses
MAX_CONCURRENT_ANALYSES=5

# Synthesis quality threshold (0.0-1.0)
SYNTHESIS_QUALITY_THRESHOLD=0.75

# =============================================================================
# Application Configuration
# =============================================================================
# Enable demo mode with pre-cached responses
DEMO_MODE=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API server configuration
API_HOST=0.0.0.0
API_PORT=8080

# =============================================================================
# Circuit Breaker Configuration (Optional)
# =============================================================================
# Maximum consecutive failures before opening circuit
CIRCUIT_BREAKER_FAIL_MAX=5

# Circuit breaker timeout in seconds
CIRCUIT_BREAKER_TIMEOUT=60

# =============================================================================
# AWS Configuration (for EKS deployment only)
# =============================================================================
# AWS credentials (only needed for EKS deployment)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-2
