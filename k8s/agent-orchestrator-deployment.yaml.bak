apiVersion: apps/v1
kind: Deployment
metadata:
  name: agent-orchestrator
  namespace: research-ops
  labels:
    app: agent-orchestrator
    component: agentic-system
spec:
  replicas: 1
  revisionHistoryLimit: 3
  selector:
    matchLabels:
      app: agent-orchestrator
  template:
    metadata:
      labels:
        app: agent-orchestrator
        component: agentic-system
    spec:
      containers:
      - name: orchestrator
        image: 294337990007.dkr.ecr.us-east-2.amazonaws.com/research-ops/orchestrator:latest
        imagePullPolicy: Always

        securityContext:
          runAsNonRoot: true
          runAsUser: 1000
          runAsGroup: 1000
          allowPrivilegeEscalation: false
          capabilities:
            drop:
              - ALL
          readOnlyRootFilesystem: false
          seccompProfile:
            type: RuntimeDefault

        ports:
        - containerPort: 8080
          name: http

        env:
        # NIM endpoints (internal cluster DNS)
        - name: REASONING_NIM_URL
          value: "http://reasoning-nim.research-ops.svc.cluster.local:8000"

        - name: EMBEDDING_NIM_URL
          value: "http://embedding-nim.research-ops.svc.cluster.local:8001"

        - name: VECTOR_DB_URL
          value: "http://qdrant.research-ops.svc.cluster.local:6333"

        # Agent configuration
        - name: MAX_PAPERS_PER_SEARCH
          value: "10"

        - name: MAX_CONCURRENT_ANALYSES
          value: "5"

        - name: ENABLE_COST_TRACKING
          value: "true"

        # AWS credentials for S3 storage
        - name: AWS_ACCESS_KEY_ID
          valueFrom:
            secretKeyRef:
              name: aws-credentials
              key: AWS_ACCESS_KEY_ID

        - name: AWS_SECRET_ACCESS_KEY
          valueFrom:
            secretKeyRef:
              name: aws-credentials
              key: AWS_SECRET_ACCESS_KEY

        - name: AWS_DEFAULT_REGION
          valueFrom:
            secretKeyRef:
              name: aws-credentials
              key: AWS_DEFAULT_REGION

        - name: S3_BUCKET_NAME
          value: "research-ops-storage"

        # Redis configuration for caching
        - name: REDIS_URL
          value: "redis://redis.research-ops.svc.cluster.local:6379/0"

        # Enable embedding caching
        - name: ENABLE_EMBEDDING_CACHE
          value: "true"

        # Paper source API keys (from secret - auto-enables sources if keys are present)
        - name: IEEE_API_KEY
          valueFrom:
            secretKeyRef:
              name: paper-source-api-keys
              key: IEEE_API_KEY
              optional: true
        - name: ACM_API_KEY
          valueFrom:
            secretKeyRef:
              name: paper-source-api-keys
              key: ACM_API_KEY
              optional: true
        - name: SPRINGER_API_KEY
          valueFrom:
            secretKeyRef:
              name: paper-source-api-keys
              key: SPRINGER_API_KEY
              optional: true
        - name: SEMANTIC_SCHOLAR_API_KEY
          valueFrom:
            secretKeyRef:
              name: paper-source-api-keys
              key: SEMANTIC_SCHOLAR_API_KEY
              optional: true

        resources:
          requests:
            memory: "3Gi"
            cpu: "2"
          limits:
            memory: "5Gi"   # Optimized for 2-node setup
            cpu: "2.5"      # Optimized to fit within node capacity

        livenessProbe:
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 30

        readinessProbe:
          httpGet:
            path: /ready
            port: 8080
          initialDelaySeconds: 10
          periodSeconds: 10

---
apiVersion: v1
kind: Service
metadata:
  name: agent-orchestrator
  namespace: research-ops
  labels:
    app: agent-orchestrator
spec:
  type: LoadBalancer
  ports:
  - port: 8080
    targetPort: 8080
    protocol: TCP
    name: http
  selector:
    app: agent-orchestrator
